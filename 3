using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SoloLearn
{
    class Program
    {
        static void Main(string[] args)
        {
            int N, k, i, sum;
            Console.Write("Введите число N: ");
            N = int.Parse(Console.ReadLine());
            sum = 0;
            k = 0;
            for (i = 1; i <= N; i++)
            {
                if (sum < N)
                {
                    sum = sum + i;
                    k = i;
                }
            }
            Console.Write("Сумма равна: ");
            Console.WriteLine(sum);
            Console.Write("K = ");
            Console.WriteLine(k);
            Console.ReadKey();
        }
    }
}
